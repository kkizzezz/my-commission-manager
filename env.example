@import url('https://fonts.googleapis.com/css2?family=Noto+Sans+Thai:wght@300;400;500;600;700&display=swap');
@import "tailwindcss";

@theme {
  --font-sans: "Noto Sans Thai", ui-sans-serif, system-ui, sans-serif;
  
  /* Warmer, more distinct bakery colors */
  --color-bakery-bg: #FDF5E6; /* Old Lace - clearly beige */
  --color-bakery-text: #5D4037; /* Brown 800 - softer than black */
  --color-bakery-accent: #D2691E; /* Chocolate - vibrant brown */
  --color-bakery-accent-hover: #A0522D; /* Sienna */
  --color-bakery-card: #FFFFFF;
  --color-bakery-border: #DEB887; /* Burlywood - visible brown border */
  --color-bakery-subtle: #FFF8DC; /* Cornsilk - for subtle backgrounds */
}

:root {
  color-scheme: light;
}

body {
  background-color: var(--color-bakery-bg);
  color: var(--color-bakery-text);
  font-family: var(--font-sans);
  line-height: 1.6;
}

/* Zigzag border for receipt */
.zigzag-border {
  position: relative;
  background: #FFFFFF;
  border-left: 1px dashed var(--color-bakery-border);
  border-right: 1px dashed var(--color-bakery-border);
}

.zigzag-border::before,
.zigzag-border::after {
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  height: 12px;
  background-size: 24px 12px;
  background-repeat: repeat-x;
}

.zigzag-border::before {
  top: -12px;
  background-image: linear-gradient(135deg, #FFFFFF 25%, transparent 25%),
    linear-gradient(225deg, #FFFFFF 25%, transparent 25%);
  filter: drop-shadow(0 -1px 0 var(--color-bakery-border));
}

.zigzag-border::after {
  bottom: -12px;
  background-image: linear-gradient(45deg, #FFFFFF 25%, transparent 25%),
    linear-gradient(-45deg, #FFFFFF 25%, transparent 25%);
  filter: drop-shadow(0 1px 0 var(--color-bakery-border));
}

/* Custom scrollbar */
::-webkit-scrollbar {
  width: 10px;
}
::-webkit-scrollbar-track {
  background: var(--color-bakery-subtle);
}
::-webkit-scrollbar-thumb {
  background: var(--color-bakery-border);
  border-radius: 10px;
  border: 2px solid var(--color-bakery-subtle);
}
::-webkit-scrollbar-thumb:hover {
  background: var(--color-bakery-accent);
}
